<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundLight">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp"
            android:orientation="vertical">
            <!-- Tên và nhãn "Mặc định" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">


                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tên người nhận"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mặc định"
                    android:textColor="#D32F2F"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="14sp"
                    android:background="@drawable/defaul_addres"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Số điện thoại -->
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+84 961 612 382"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginBottom="2dp" />

            <!-- Địa chỉ (đường) -->
            <TextView
                android:id="@+id/tvStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số nhà 108, Ngõ 79 Phùng Khoang"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginBottom="2dp" />

            <!-- Thành phố, tỉnh, zip, quốc gia -->
            <TextView
                android:id="@+id/tvWard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phường Trung Văn, Quận Nam Từ Liêm, Hà Nội"
                android:textColor="#000000"
                android:textSize="17sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
