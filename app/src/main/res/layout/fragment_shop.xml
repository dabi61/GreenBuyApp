<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.shop.ShopFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="@dimen/_12sdp"
            android:textColor="@color/white"
            android:text="Hãy thiết lập cửa hàng của bạn"
            style="@style/GreenBuy.Button.Filled"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_shop_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/main_color"
                app:title="Đăng ký cửa hàng"
                app:titleTextColor="@color/white"
                app:navigationIconTint="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout_create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:src="@drawable/avatar_blank"/>

        <ImageView
            android:id="@+id/ic_add"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
            app:layout_constraintEnd_toEndOf="@id/iv_avatar"
            android:src="@drawable/ic_add"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@id/tl_name"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textStyle="bold"
                android:text="@string/tai_khoan"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_username"
                style="@style/GreenBuy.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="text|textNoSuggestions"
                    android:hint="Nhập tên của cửa hàng"
                    android:textColor="@color/black"
                    android:focusableInTouchMode="true"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tl_name"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:text="@string/mat_khau"
                android:visibility="gone"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tl_name"
                android:layout_marginTop="@dimen/_6sdp"
                style="@style/GreenBuy.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:hint="Nhập số điện thoại của cửa hàng"
                    android:textColor="@color/black"
                    android:inputType="text|textNoSuggestions"
                    android:singleLine="true"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tl_phone_number"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textStyle="bold"
                android:text="@string/mat_khau"
                android:visibility="gone"/>

            <CheckBox
                android:id="@+id/cb_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_phone_number"
                android:layout_marginVertical="@dimen/_4sdp"
                android:textColor="@color/black"
                android:buttonTint="@color/main_color"
                android:text="@string/toi_dong_y_voi_cac_dieu_khoan_cua_greenbuy"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:padding="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/cb_register"
                style="@style/GreenBuy.Button.Filled"
                android:enabled="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_admin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundLight"
        android:visibility="gone">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_admin"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/main_color"
                app:title="Quản trị hệ thống"
                app:titleTextColor="@color/white"
                app:navigationIconTint="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Admin Dashboard -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/app_bar_admin"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Duyệt đơn hàng -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_order_approval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_order_approval"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_approve_order"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.454" />

                        <TextView
                            android:id="@+id/tv_order_approval_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Duyệt đơn hàng"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/iv_order_approval"
                            app:layout_constraintTop_toTopOf="@id/iv_order_approval"
                            app:layout_constraintEnd_toStartOf="@id/tv_order_approval_count" />

                        <TextView
                            android:id="@+id/tv_order_approval_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/main_color"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_order_approval_title"
                            app:layout_constraintBottom_toBottomOf="@id/tv_order_approval_title" />

                        <TextView
                            android:id="@+id/tv_order_approval_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Đơn hàng chờ duyệt"
                            android:textSize="12sp"
                            android:textColor="@color/grey_600"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_order_approval"
                            app:layout_constraintTop_toBottomOf="@id/tv_order_approval_title"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Duyệt sản phẩm -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_product_approval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_product_approval"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_approve_product"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_product_approval_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Duyệt sản phẩm"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/iv_product_approval"
                            app:layout_constraintTop_toTopOf="@id/iv_product_approval"
                            app:layout_constraintEnd_toStartOf="@id/tv_product_approval_count" />

                        <TextView
                            android:id="@+id/tv_product_approval_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_600"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_product_approval_title"
                            app:layout_constraintBottom_toBottomOf="@id/tv_product_approval_title" />

                        <TextView
                            android:id="@+id/tv_product_approval_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Sản phẩm chờ duyệt"
                            android:textSize="12sp"
                            android:textColor="@color/grey_600"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_product_approval"
                            app:layout_constraintTop_toBottomOf="@id/tv_product_approval_title"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tạo danh mục -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_create_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_create_category"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_add_category"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_create_category_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Tạo danh mục"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="16dp"
                            app:layout_constraintStart_toEndOf="@id/iv_create_category"
                            app:layout_constraintTop_toTopOf="@id/iv_create_category"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tv_create_category_subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Quản lý danh mục sản phẩm"
                            android:textSize="12sp"
                            android:textColor="@color/grey_600"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintStart_toEndOf="@id/iv_create_category"
                            app:layout_constraintTop_toBottomOf="@id/tv_create_category_title"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Thống kê tổng quan -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_admin_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thống kê tổng quan"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Tổng đơn hàng -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:id="@+id/tv_total_orders"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="156"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/main_color" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tổng đơn hàng"
                                    android:textSize="10sp"
                                    android:textColor="@color/grey_600"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Tổng sản phẩm -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_marginStart="8dp">

                                <TextView
                                    android:id="@+id/tv_total_products"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="89"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/green_600" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tổng sản phẩm"
                                    android:textSize="10sp"
                                    android:textColor="@color/grey_600"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundLight"
        android:visibility="visible">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_dashboard"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:title="Shop của tôi"
                app:titleTextColor="@color/black"
                app:navigationIconTint="@color/black" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintTop_toBottomOf="@id/app_bar_dashboard"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatar_dashboard"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:src="@drawable/avatar_blank"/>
                <TextView
                    android:id="@+id/tv_name_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/iv_avatar_dashboard"
                    app:layout_constraintTop_toTopOf="@id/iv_avatar_dashboard"
                    app:layout_constraintEnd_toStartOf="@id/bt_lock_shop"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/tv_shop_id_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_name_dashboard"
                    app:layout_constraintStart_toStartOf="@id/tv_name_dashboard"
                    android:textColor="@color/grey_600"
                    app:layout_constraintEnd_toStartOf="@id/bt_lock_shop"
                    android:text="greenbuy.site/name"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_lock_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.95"
                    app:cornerRadius="@dimen/_4sdp"
                    android:textColor="@color/main_color"
                    android:text="Xem Shop"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    style="@style/GreenBuy.Button.Outline"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            app:layout_constraintTop_toBottomOf="@id/cv_shop"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp"
            app:cardBackgroundColor="@color/main_color">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/banner_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banner_1"/>
        </androidx.cardview.widget.CardView>

        <com.zhpan.indicator.IndicatorView
            android:id="@+id/indicator_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="@id/cv_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_dashboard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintTop_toBottomOf="@id/cv_banner"
            app:cardCornerRadius="@dimen/_8sdp"
            android:layout_margin="@dimen/_8sdp"
            app:cardBackgroundColor="@color/white">

