<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="16dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/grey_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/green_300"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSubCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Áo cộc tay" />

            <TextView
                android:id="@+id/tvSubCategoryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grey_600"
                android:layout_marginTop="2dp"
                tools:text="Mô tả subcategory" />

            <TextView
                android:id="@+id/tvSubCategoryCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/grey_500"
                android:layout_marginTop="2dp"
                tools:text="Tạo lúc: 2025-06-20T16:01:54.226436" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditSubCategory"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="4dp"
                app:tint="@color/blue_600" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 